{% extends 'base.html.twig' %}

{% block title %}Peres index{% endblock %}

{% block body %}
    <h1>Peres index</h1>

    <table class="table table-striped table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th colspan="8">Peres list</th>
            </tr>
            <tr>
                <th colspan="8">
                    <form method="get" action="{{ path('app_peres_index') }}">
                        <input type="text" name="search" placeholder="Search..." value="{{ app.request.get('search') }}">
                        <button type="submit">Search</button>
                    </form>
                </th>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Profession</th>
                <th>Téléphone 1</th>
                <th>Téléphone 2</th>
                <th>Email</th>
                {#<th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Slug</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pere in peres %}
            <tr>
                <td>{{ pere.id }}</td>
                <td>{{ pere.fullname }}</td>
                <td>{{ pere.profession }}</td>
                <td>{{ pere.telephone1 }}</td>
                <td>{{ pere.telephone2 }}</td>
                <td>{{ pere.email }}</td>
                {#<td>{{ pere.createdAt ? pere.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pere.updatedAt ? pere.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pere.slug }}</td>#}
                <td>
                    <a href="{{ path('app_peres_show', {'id': pere.id}) }}">show</a>
                    <a href="{{ path('app_peres_edit', {'id': pere.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_peres_new') }}">Create new</a>
{% endblock %}
