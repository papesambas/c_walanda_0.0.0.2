{% extends 'base.html.twig' %}

{% block title %}Telephones1 index{% endblock %}

{% block body %}
    <h1>Telephones1 index</h1>

    <table class="table table-striped table-bordered table-hover table-sm">
        <thead>
            <tr>
                <th colspan="6">Liste des N° Téléphones 1</th>
            </tr>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numéro</th>
                    <th>Titulaire</th>
                    <th>Profession</th>
                    <th>actions</th>
                </tr>
            </thead>
        <tbody>
            {% for telephones1 in telephones1s %}
            <tr>
                <td>{{ telephones1.id }}</td>
                <td>{{ telephones1.numero }}</td>
                <td>
                    {% if telephones1.peres is not null %}
                    {{ telephones1.peres }}
                    {% elseif telephones1.meres is not null %}
                    {{ telephones1.meres }}
                    {% else %}
                    Non renseigné
                    {% endif %}
                </td>
                <td> {% if telephones1.peres is not null %}
                    {{ telephones1.peres.profession }}
                    {% elseif telephones1.meres is not null %}
                    {{ telephones1.meres.profession }}
                    {% else %}
                    Non renseigné
                    {% endif %}
                </td>
                <td>
                        <a href="{{ path('app_telephones1_show', {'id': telephones1.id}) }}">show</a>
                    <a href="{{ path('app_telephones1_edit', {'id': telephones1.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_telephones1_new') }}">Create new</a>
